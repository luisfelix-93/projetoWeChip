@model WeChip.Models.Status

@{
    ViewBag.Title = "Deletar Status";
}

<h2>Deletar Status</h2>

<h3>Tem certeza que quer deletar o Status?</h3>
<div>
    <h4>Status</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Status do Cliente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescricaoStatus)
        </dd>

        <dt>
            @Html.DisplayName("Finalizar Cliente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinalizaCliente)
        </dd>

        <dt>
            @Html.DisplayName("Contabilizar Venda")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContabCliente)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Retornar para Lista", "Index")
        </div>
    }
</div>
